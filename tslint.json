{
  "extends": ["tslint:recommended", "tslint-eslint-rules", "tslint-sonarts", "tslint-consistent-codestyle"],
  "linterOptions": {
    "exclude": [
      "./src/main.ts",
      "./src/polyfills.ts",
      "./src/test.ts",
      "./e2e/**"
    ]
  },
  "rules": {
    "align": {
      "options": ["parameters", "statements"]
    },
    "arrow-return-shorthand": true,
    "curly": true,
    "eofline": true,
    "import-spacing": true,
    "interface-over-type-literal": true,
    "object-literal-key-quotes": { "options": "consistent-as-needed" },
    "one-line": {
      "options": [
        "check-catch",
        "check-else",
        "check-finally",
        "check-open-brace",
        "check-whitespace"
      ]
    },
    "quotemark": {
      "options": ["double", "avoid-escape"]
    },
    "semicolon": { "options": ["always"] },
    "space-before-function-paren": {
      "options": {
        "anonymous": "never",
        "asyncArrow": "always",
        "constructor": "never",
        "method": "never",
        "named": "never"
      }
    },
    "typedef-whitespace": {
      "options": [
        {
          "call-signature": "nospace",
          "index-signature": "nospace",
          "parameter": "nospace",
          "property-declaration": "nospace",
          "variable-declaration": "nospace"
        },
        {
          "call-signature": "onespace",
          "index-signature": "onespace",
          "parameter": "onespace",
          "property-declaration": "onespace",
          "variable-declaration": "onespace"
        }
      ]
    },
    "whitespace": {
      "options": [
        "check-branch",
        "check-decl",
        "check-operator",
        "check-separator",
        "check-type",
        "check-typecast"
      ]
    },
    "no-trailing-whitespace": true,
    "array-type": [
      true,
      "array"
    ],
    "arrow-parens": false,
    "ban-comma-operator": true,
    "component-selector": [
      false,
      "element",
      "app",
      "kebab-case"
    ],
    "deprecation": {
      "severity": "warn"
    },
    "directive-selector": [
      false,
      "attribute",
      "app",
      "camelCase"
    ],
    "import-blacklist": [
      true,
      "rxjs/Rx"
    ],
    "indent": false,
    "interface-name": false,
    "jsdoc-format": false,
    "max-line-length": [
      true,
      200
    ],
    "member-access": false,
    "member-ordering": false,
    "no-consecutive-blank-lines": false,
    "no-duplicate-variable": true,
    "no-implicit-dependencies": true,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-non-null-assertion": true,
    "no-object-literal-type-assertion": true,
    "no-string-literal": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "prefer-object-spread": true,
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": true
      }
    ],
    "trailing-comma": { "severity": "warn" },
    "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"],
    "no-duplicate-string": [true, 10],
    "no-commented-code": { "severity": "warn" },
    "no-ignored-initial-value": { "severity": "warn" },
    "no-ignored-return": { "severity": "warn" },
    "no-inconsistent-return": { "severity": "warn" },
    "no-self-assignment": { "severity": "warn" },
    "no-useless-cast": { "severity": "warn" },
    "parameters-max-number": [15, { "severity": "warn" }],
    "prefer-immediate-return": { "severity": "warn" },
    "cognitive-complexity": [20, { "severity": "warn" }],
    "no-unnecessary-type-annotation": { "severity":  "warn" }
  }
}
